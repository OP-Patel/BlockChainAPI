<%- include("partials/header.ejs") %> 

<body>
    <div class="mainBody">
        <form action="/submit" method="POST" class="addFont">
            <label for="token">Input symbol: </label>
            <input class="my-2" type="text" id="token" 
            placeholder="BTC-USD" 
            name="symbolName" 
            required=""
            oninvalid="this.setCustomValidity('Please enter valid symbol from list below.')" 
            oninput="setCustomValidity('')"
            >
            <input class = "addFont btn btn-success m-2 mb-3" type = "submit" id="submitButton">

        </form>
    </div>
<div class ="mainBody">
    <div class="container">
        <h5 class= "addFont"> Supported symbols: </h5>

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-5 py-3 border-top">
            <div class="col">
                <ul class = "list-unstyled">
                    <% for( let index = 0; index < 20; index++ ) { %>
                        <li class="addFont"> <%= allNames[index] %></li>
                    <% } %>    
                </ul>
            </div>
            <div class="col">
                <ul class = "list-unstyled">
                    <% for( let index = 20; index < 40; index++ ) { %>
                        <li class="addFont"> <%= allNames[index] %></li>
                    <% } %>    
                </ul>
            </div>
            <div class="col">
                <ul class = "list-unstyled">
                    <% for( let index = 40; index < 60; index++ ) { %>
                        <li class="addFont"> <%= allNames[index] %></li>
                    <% } %>    
                </ul>
            </div>
            <div class="col">
                <ul class = "list-unstyled">
                    <% for( let index = 60; index < 80; index++ ) { %>
                        <li class="addFont"> <%= allNames[index] %></li>
                    <% } %>    
                </ul>
            </div>

            <div class="col">
                <ul class = "list-unstyled">
                    <% for( let index = 80; index < 100; index++ ) { %>
                        <li class="addFont"> <%= allNames[index] %></li>
                    <% } %>    
                </ul>
                <button class = "addFont btn btn-light mb-2" id="viewMore"> View all</button>
            </div>

            <!-- HIDDEN SYMBOLS  -->

            <div class="col hidden ex">
                <ul class = "list-unstyled">
                    <% for( let index = 100; index < 120; index++ ) { %>
                        <li class="addFont"> <%= allNames[index] %></li>
                    <% } %>    
                </ul>
            </div>
            <div class="col hidden ex">
                <ul class = "list-unstyled">
                    <% for( let index = 120; index < 140; index++ ) { %>
                        <li class="addFont"> <%= allNames[index] %></li>
                    <% } %>    
                </ul>
            </div>
            <div class="col hidden ex">
                <ul class = "list-unstyled">
                    <% for( let index = 140; index < 160; index++ ) { %>
                        <li class="addFont"> <%= allNames[index] %></li>
                    <% } %>    
                </ul>
            </div>
            <div class="col hidden ex">
                <ul class = "list-unstyled">
                    <% for( let index = 160; index < allNames.length; index++ ) { %>
                        <li class="addFont"> <%= allNames[index] %></li>
                    <% } %>    
                </ul>
                <button class = "hidden addFont btn btn-dark mb-3" id="viewLess"> View less</button>
            </div>

        </div>

        
    </div>
</div>
<div class = "container">
    <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
        <p class="addFont col-md-4 mb-0 text-body-secondary">Â© <%= new Date().getFullYear() %> Om Patel</p>
    
        <div class="col-md-4 d-flex align-items-center justify-content-center mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none">
            <svg xmlns="http://www.w3.org/2000/svg" width="26" height="26" fill="currentColor" class="bi bi-patch-check" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M10.354 6.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 1 1 .708-.708L7 8.793l2.646-2.647a.5.5 0 0 1 .708 0z"/>
